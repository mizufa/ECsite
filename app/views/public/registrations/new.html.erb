<div class="container">

<div class="row">
<h5><strong>新規会員登録</strong></h5>
</div>

<div class="row justify-content-center">
<table class="table-sm table-borderless">
<tbody>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <tr class="field">
    <th><%= f.label :"名前" %></th>
    <td><%= f.label :"（姓）" %></td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.label :"（名）" %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"フリガナ" %></th>
    <td><%= f.label :"（セイ）" %></td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.label :"（メイ）" %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"メールアドレス" %></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"住所" %></th>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"電話番号(ハイフンなし)" %></th>
    <td><%= f.text_field :telephone_number %><td>
  </tr>

  <tr class="field">
    <th><%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %></th>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr class="field">
    <th><%= f.label :"パスワード(確認用)" %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </trv>

  <tr class="actions">
    <th></th>
    <td><%= f.submit "新規登録" %></td>
  </tr>
<% end %>
</tbody>
</table>

</div>
</div>


<div class="container">
<div class="row">
<h5><strong>既に登録済みの方</strong></h5>
</div>

<!-- render "public/shared/links" -->
<%= link_to new_customer_session_path do %>
<% "こちら" %>
<% end %>
からログインしてください。
</div>