<h1>Customer#show</h1>
<p>Find me in app/views/customer/show.html.erb</p>

<div class="container">
  <div class="row">
    <h5><strong>マイページ</strong></h5>
  </div>

  <div class="row">
    <div class="col-1">登録情報</div>
    <div class="col-2"><%= link_to "編集ボタン", edit_customer_path %></div>
  </div>

  <div class="row col-8">
    <table class="table table-bordered">
      <tr>
        <th class="col-2">氏名</th>
        <td class="col-6"><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="col-1">注文履歴</div>
    <div class="col-2">
      <%= link_to orders_path do %>
        一覧を見る
      <% end %>
    </div>
  </div>


</div>
