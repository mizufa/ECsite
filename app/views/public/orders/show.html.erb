<h1>Public::Orders#show</h1>
<p>Find me in app/views/public/orders/show.html.erb</p>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-2">
      <h5><strong>注文履歴詳細</strong></h5>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <strong>注文情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order_id.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order_id.postal_code %><%= @order_id.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order_id.payment_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col">
      <strong>請求情報</strong>
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @history.item_total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>
              <% total = 0 %>
              <% total += @history.item_total %>
              <% total += @postage %>
              <%= total %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <strong>注文内容</strong>
      <table class="table">
        <thead>
          <tr>
            <th class="col-2">商品</th>
            <th class="col-1">単価（税込）</th>
            <th class="col-1">個数</th>
            <th class="col-1">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @history.order_details.each do |order| %>
              <tr>
                <td><%= order.item.name %></td>
                <td><%= order.purchase_price %></td>
                <td><%= order.amount %></td>
                <td><%= order.subtotal %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>