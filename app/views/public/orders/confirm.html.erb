<div class="container">
  <div class="row">
    <div class="col-2">
      <h5>注文情報確認</h5>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table-sm">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.purchase_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col">
      <table class="table-sm">
        <tbody>
          <tr>
            <th>送料</th>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <% @cart_items.each do |cart_item| %>
            <th>商品合計</th>
            <td><%= @total += cart_item.subtotal %></td>
            <% end %>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @request += @postage + @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      支払方法
    </div>
    <div class="col-2">
      <%= @order.payment_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      お届け先
    </div>
    <div class="col-2">
      <%= @order.address %>
    </div>
  </div>

    <div class="row justify-content-center">
    <%= f.submit '注文を確定する', class: 'btn btn-success' %>
  </div>

</div>