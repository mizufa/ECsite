<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-2">
      <h5><strong>注文履歴一覧</strong></h5><!--管理者トップページ-->
    </div>
  </div>

  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= order.postal_code %><%= order.address %></td>
          <td>
            <% order.order_details.each do |detail| %>
              <%= detail.item.name %><br>
            <% end %>
          </td>
          <td><%= order.item_total %></td>
          <td>
            <%= link_to order_path(order.id) do %>
              <button type="button" class="btn btn-primary">表示する</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
