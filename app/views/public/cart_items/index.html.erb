<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <h5>ショッピングカート</h5>
    </div>
    <div class="col-4">
      <h5>
        <%= link_to customers_destroy_all_path(@cart_item), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" do %>
        カートを空にする
        <% end %>
      </h5>
    </div>
  </div>

<!--カート内の商品情報-->
  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <% @cart_item.each do |cart_item| %>
      <tbody>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_purchase_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更", class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td>
            <%= link_to cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" do %>
            削除する
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

<!--「買い物を続ける」と合計金額-->
  <div class="row">
    <div class="col">
      <%= link_to root_path, class: "btn btn-sm btn-primary" do %>
      買い物を続ける
      <% end %>
    </div>
    <div class="col-3">
      <table class="table-sm">
        <tbody>
          <th>合計金額</th>
          <td>
            <% @cart_item.each do |cart_item| %>
              <% @total = @total + cart_item.subtotal %>
            <% end %>
            <%= @total %>
          </td>
        </tbody>
      </table>
    </div>
  </div>

<!--注文へ-->
  <div class="row justify-content-center">
      <%= link_to new_order_path, class: "btn btn-sm btn-success" do %>
      情報入力に進む
      <% end %>
  </div>

</div>