<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <h5>ショッピングカート</h5>
    </div>
    <div class="col-4">
      <h5>
        <%= link_to cart_item_path(cart_item.item.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" do %>
        削除する
        <% end %>
      </h5>
    </div>
  </div>

  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <% @cart_item.each do |cart_item| %>
      <tbody>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_purchase_price.to_s(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <td>
            <%= link_to cart_item_path(cart_item.item.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" do %>
            削除する
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>