<h1>Customer#show</h1>
<p>Find me in app/views/customer/show.html.erb</p>

<div class="container">
  <div class="row">
    <h5><strong>マイページ</strong></h5>
  </div>

  <div class="row">
    <div class="col-1">登録情報</div>
    <div class="col-2"><%= link_to "編集ボタン", edit_user_path(customer.id) %></div>
  </div>

  <div class="row col-8">
    <table class="table table-bordered">
      <tr>
        <th class="col-2">氏名</th>
        <td class="col-6"><%= @user.last_name %><%= @user.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @user.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="col-1">配送先</div>
    <div class="col-2">一覧を見る</div>
  </div>

  <div class="row">
    <div class="col-1">注文履歴</div>
    <div class="col-2">一覧を見る</div>
  </div>


</div>
