<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-2">
      <h5>商品一覧</h5>
    </div>

    <%= link_to new_admin_item_path do %>
    <div class="col-2 float-start">
      <i class="fas fa-plus"></i>
    </div>
    <% end %>
 </div>

  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
<% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
          <td><%= item.purchase_price %></td>
        </tr>
      </tbody>
<% end %>
    </table>
  </div>

</div>