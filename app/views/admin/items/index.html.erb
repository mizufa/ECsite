<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<div class="container">
  <div class="row">
    <h5>商品一覧</h5>
  </div>

  <div class="row">
    <table class="table-sm">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
<% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.purchase_price %></td>
        </tr>
      </tbody>
<% end %>
    </table>
  </div>

</div>