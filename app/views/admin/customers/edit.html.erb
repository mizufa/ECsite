<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>

<div class="container">

  <div class="row">
    <div class="col-4">
      <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
    </div>
  </div>

<%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", method: :patch do |f| %>
  <div class="row">
    <div class="col-2">
      会員ID
    </div>
    <div class="col-1">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      氏名
    </div>
    <div class="col-1">
      <%= f.text_field :last_name %>
    </div>
    <div class="col-1">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      フリガナ
    </div>
    <div class="col-1">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-1">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      郵便番号
    </div>
    <div class="col-1">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      住所
    </div>
    <div class="col-1">
      <%= f.text_area :address %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      電話番号
    </div>
    <div class="col-1">
       <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      メールアドレス
    </div>
    <div class="col-1">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      会員ステータス
    </div>
    <div class="col-2">
      <%= f.radio_button :is_deleted, "false" %><%= f.label :is_deleted_false, "有効" %>
      <%= f.radio_button :is_deleted, "true" %><%= f.label :is_deleted_true, "退会" %>
    </div>
  </div>

  <div class="row">
      <div class="col-2">
        <%= f.submit "変更を保存する", class: 'btn btn-success' %>
      </div>
  </div>
<% end %>

</div>