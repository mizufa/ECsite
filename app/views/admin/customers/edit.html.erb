<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>

<div class="container">

  <div class="row">
    <div class="col-4">
      <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
    </div>
  </div>

<%= form_with model: @customer, method: :patch do |f| %>
  <div class="row">
    <div class="col-1">
      会員ID
    </div>
    <div class="col-1">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      氏名
    </div>
    <div class="col-1">
      <%= f.text_field :last_name %>
    </div>
    <div class="col-1">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      フリガナ
    </div>
    <div class="col-1">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-1">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      郵便番号
    </div>
    <div class="col-1">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      住所
    </div>
    <div class="col-1">
      <%= f.text_area :address %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      電話番号
    </div>
    <div class="col-1">
       <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      メールアドレス
    </div>
    <div class="col-1">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      会員ステータス
    </div>
    <div class="col-1">
      <%= f.text_field :is_deleted %>
    </div>
  </div>

  <div class="row">
      <div class="col-2">
        <!-- link_to edit_admin_customer_path(@customer.id) do -->
          <button type="button" class="btn btn-success">変更を保存する</button>
        <!-- end -->
      </div>
  </div>
<% end %>

</div>